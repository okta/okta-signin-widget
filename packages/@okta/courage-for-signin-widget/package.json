{
  "name": "courage-for-signin-widget",
  "version": "1.0.0",
  "description": "Generates a version of Courage for Sign-In Widget",
  "main": "src/CourageForSigninWidget.js",
  "type": "module",
  "scripts": {
    "lint:src": "eslint .",
    "lint:target": "eslint --no-inline-config --no-ignore --ext .js target/esm",
    "lint": "yarn lint:src && yarn lint:target",
    "prebuild": "yarn link:lib && yarn link:courage && yarn patch",
    "link:lib": "ln -snf ./node_modules ./lib",
    "link:courage": "pushd ./src && ln -snf ../node_modules/@okta/courage/src ./courage && popd",
    "clean": "yarn clean:esm && yarn clean:types && rm -rf ./target",
    "clean:esm": "rm -rf ../courage-dist/esm && rm -rf ./target/esm",
    "clean:types": "rm -rf ../courage-dist/types && rm -rf ./target/types",
    "generate:types": "tsc --noEmit false --declaration --emitDeclarationOnly",
    "copy:types": "mkdir -p ../courage-dist/types && cp -r ./target/types/* ../courage-dist/types/",
    "copy:esm": "mkdir -p ../courage-dist/esm && cp -r ./target/esm/* ../courage-dist/esm/",
    "copy": "yarn copy:types && yarn copy:esm",
    "build:types": "yarn clean:types && yarn generate:types",
    "build:esm": "rollup -c",
    "build": "yarn clean && yarn build:types && yarn build:esm && yarn lint && yarn copy",
    "build:babel": "rm -rf target/babel && yarn babel src -x .ts,.js --out-dir target/babel",
    "patch": "./scripts/patch.sh"
  },
  "engines": {
    "node": ">=12.22.0",
    "yarn": "^1.7.0"
  },
  "dependencies": {
    "clipboard": "^1.5.16"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.9",
    "@babel/plugin-external-helpers": "^7.16.7",
    "@babel/plugin-transform-shorthand-properties": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@okta/babel-plugin-handlebars-inline-precompile": "3.1.0-beta.4200.gf3d0a27",
    "@okta/courage": "4.5.0-8079-gf8f36f1",
    "@okta/eslint-plugin-okta-ui": "0.1.0-beta.4181.g1f38f27",
    "@rollup/plugin-alias": "^3.1.9",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^21.1.0",
    "@rollup/plugin-node-resolve": "^13.2.1",
    "@types/backbone": "^1.4.15",
    "@types/underscore": "^1.11.4",
    "babel-plugin-transform-amd-to-commonjs": "^1.5.0",
    "babel-plugin-transform-amd-to-es6": "^0.6.1",
    "copy-webpack-plugin": "4.6.0",
    "eslint": "^7.23.0",
    "rollup": "^2.70.2",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-visualizer": "^5.6.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.6.2",
    "webpack": "^5.51.1",
    "webpack-bundle-analyzer": "^4.5.0"
  }
}
