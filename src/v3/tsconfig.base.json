{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react",
    "jsxFactory": "h",
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "@okta/courage": [
        "../../packages/@okta/courage-dist"
      ],
      "@okta/duo": [
        "../../packages/vendor/duo_web_sdk/index.js",
        "../../playground/mocks/spec-duo/duo-mock.js"
      ],
      "@okta/mocks/*": [
        "../../playground/mocks/*"
      ],
      "@okta/okta-i18n-bundles": [
        "../util/Bundles.ts"
      ],
      "@okta/qtip": [
        "../../packages/@okta/qtip2/dist/jquery.qtip.js"
      ],
      "config/config.json": [
        "../config/config.json"
      ],
      "nls/*": [
        "../../packages/@okta/i18n/src/json/*"
      ],
      "preact/hooks": [
        "./node_modules/preact/hooks"
      ],
      "react": [
        "./node_modules/preact/compat"
      ],
      "react-dom": [
        "./node_modules/preact/compat"
      ],
      "src/*": [
        "./src/*"
      ],
      "util/*": [
        "../util/*"
      ]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES5"
  },
  "extends": "../../tsconfig.json",
  "files": [
    "global.d.ts",
    "widgetrc.ts"
  ]
}
