{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug with Jest",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "runtimeExecutable": "${env:HOME}/.nvm/versions/node/v14.18.3/bin/node",
      "args": [
        "--runInBand",
        "--no-cache",
        "--config=jest.config.js",
        "--testTimeout=3600000",
        "${relativeFile}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "protocol": "inspector",
      "request": "launch",
      "name": "Debug with TestCafe",
      "program": "${workspaceRoot}/node_modules/testcafe/bin/testcafe.js",
      "runtimeExecutable": "${env:HOME}/.nvm/versions/node/v14.18.3/bin/node",
      "args": [
          "chrome",
          "${relativeFile}",
          "--browser-init-timeout",
          "1000000",
          "--page-load-timeout",
          "1000000"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceRoot}"
    },
    {
      "type": "node",
      "protocol": "inspector",
      "request": "launch",
      "name": "Debug v3 Parity with TestCafe",
      "program": "${workspaceRoot}/node_modules/testcafe/bin/testcafe.js",
      "runtimeExecutable": "${env:HOME}/.nvm/versions/node/v14.18.3/bin/node",
      "env": {
        "OKTA_SIW_GEN3": "true"
      },
      "args": [
          "chrome",
          "${relativeFile}",
          "--browser-init-timeout",
          "1000000",
          "--page-load-timeout",
          "1000000",
          "--config-file",
          ".testcaferc.js",
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceRoot}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug with WebdriverIO",
      "program": "${workspaceRoot}/test/e2e/node_modules/@wdio/cli/bin/wdio.js",
      "runtimeExecutable": "${env:HOME}/.nvm/versions/node/v14.18.3/bin/node",
      "args": [
          "${workspaceRoot}/test/e2e/wdio.conf.js",
          "--spec",
          "${relativeFile}"
      ],
      "autoAttachChildProcesses": true,
      "console": "integratedTerminal",
      "cwd": "${workspaceRoot}/test/e2e",
      "env": {
        "DEBUG": "1"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Cucumber Tests Debug with WebdriverIO",
      "program": "${workspaceRoot}/test/e2e/node_modules/@wdio/cli/bin/wdio.js",
      "runtimeExecutable": "${env:HOME}/.nvm/versions/node/v14.18.3/bin/node",
      "args": [
          "${workspaceRoot}/test/e2e/cucumber.wdio.conf.ts",
          "--spec",
          "${relativeFile}"
      ],
      "autoAttachChildProcesses": true,
      "console": "integratedTerminal",
      "cwd": "${workspaceRoot}/test/e2e",
      "env": {
        "DEBUG": "1"
      }
    }
  ]
}
